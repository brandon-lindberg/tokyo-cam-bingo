<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= t('cardBuilder.pageTitle') %></title>

  <!-- PWA Meta Tags -->
  <meta name="description" content="<%= t('cardBuilder.metaDescription') %>">
  <meta name="theme-color" content="#FF69B4">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="TCB">
  <meta name="csrf-token" content="<%= csrfToken %>">

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css?v=<%= assetVersion %>">
  <script src="/js/pwa-install.js?v=<%= assetVersion %>" defer></script>
  <style>
    .card-builder-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }

    .builder-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .builder-form {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .builder-tabs {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
    }

    .builder-tab {
      flex: 1 1 160px;
      border: 2px solid #E0E0E0;
      background: #F8FBFF;
      color: #555;
      padding: 0.65rem 0.9rem;
      border-radius: 999px;
      font-family: 'Poppins', sans-serif;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 0.95rem;
    }

    .builder-tab.active {
      border-color: #00BFFF;
      background: #00BFFF;
      color: white;
      box-shadow: 0 4px 10px rgba(0,191,255,0.25);
    }

    .tab-panel {
      display: none;
    }

    .tab-panel.active {
      display: block;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      font-family: 'Poppins', sans-serif;
      color: #FF69B4;
      margin-bottom: 0.5rem;
      font-size: 1.1rem;
    }

    .form-group input[type="text"] {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 2px solid #E0E0E0;
      border-radius: 8px;
      font-family: 'Roboto', sans-serif;
    }
    .template-section {
      border: 1px solid #E0E0E0;
      border-radius: 8px;
      padding: 1rem;
      background: #FAFEFF;
    }

    .helper-text {
      font-size: 0.9rem;
      color: #666;
      margin-top: 0.5rem;
    }

    .helper-text.muted {
      color: #94A3B8;
    }

    .helper-text.error {
      color: #EF4444;
    }

    .preset-select-row {
      display: flex;
      gap: 0.75rem;
      align-items: center;
      flex-wrap: wrap;
      margin-top: 0.5rem;
    }

    .preset-select-row select {
      flex: 1;
      min-width: 220px;
    }

    .preset-load-row {
      margin-top: 0.75rem;
    }

    .template-code-row {
      display: flex;
      gap: 0.5rem;
      align-items: center;
      flex-wrap: wrap;
    }

    .template-code-row input {
      flex: 1;
      text-transform: uppercase;
    }

    .template-divider {
      text-align: center;
      font-size: 0.8rem;
      letter-spacing: 0.08em;
      color: #999;
      text-transform: uppercase;
      margin: 1rem 0;
    }

    .template-section .helper-text {
      margin-top: 0.5rem;
    }

    .items-section {
      margin-top: 2rem;
    }

    .items-list {
      max-height: 400px;
      overflow-y: auto;
      margin-bottom: 1rem;
      padding: 1rem;
      background: #F0F8FF;
      border-radius: 8px;
    }

    .item-row {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
      align-items: center;
    }

    .item-number {
      min-width: 40px;
      font-weight: 600;
      color: #666;
      text-align: right;
      font-size: 0.95rem;
    }

    .item-row input {
      flex: 1;
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-family: 'Roboto', sans-serif;
    }

    .item-row button {
      background-color: #EF4444;
      color: white;
      border: none;
      padding: 0.6rem 1rem;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .item-row button:hover {
      background-color: #DC2626;
    }

    .add-item-btn {
      background-color: #10B981;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .add-item-btn:hover {
      background-color: #0EA371;
    }

    .item-count {
      text-align: center;
      color: #666;
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }

    .item-count.error {
      color: #EF4444;
    }

    .item-count.success {
      color: #10B981;
    }

    .save-btn {
      width: 100%;
      padding: 1rem 2rem;
      font-size: 1.2rem;
      font-family: 'Poppins', sans-serif;
      background-color: #00BFFF;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-top: 1rem;
    }

    .save-btn:hover:not(:disabled) {
      background-color: #009ACD;
    }

    .save-btn:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }

    .back-link {
      display: inline-block;
      margin-bottom: 1rem;
      color: #00BFFF;
      text-decoration: none;
      font-size: 1rem;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    /* Success Modal */
    .modal-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.6);
      z-index: 1003;
      align-items: center;
      justify-content: center;
    }

    .modal-card {
      background: #ffffff;
      width: 90%;
      max-width: 500px;
      border-radius: 16px;
      padding: 2rem;
      text-align: center;
    }

    .modal-card h2 {
      color: #10B981;
      margin-bottom: 1rem;
    }

    .code-display {
      background: #F0F8FF;
      padding: 1.5rem;
      border-radius: 8px;
      margin: 1.5rem 0;
      border: 2px solid #00BFFF;
    }

    .code-text {
      font-family: 'Courier New', monospace;
      font-size: 2rem;
      color: #00BFFF;
      font-weight: bold;
      letter-spacing: 0.2rem;
    }

    .copy-code-btn {
      background-color: #10B981;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Roboto', sans-serif;
      margin-top: 1rem;
    }

    .copy-code-btn:hover {
      background-color: #0EA371;
    }

    .home-btn {
      background-color: #00BFFF;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Roboto', sans-serif;
      margin-top: 1rem;
      margin-left: 0.5rem;
    }

    .home-btn:hover {
      background-color: #009ACD;
    }

    /* Mobile Responsive Styles */
    @media (max-width: 768px) {
      .card-builder-container {
        padding: 1rem;
      }

      .builder-header h1 {
        font-size: 1.5rem;
      }

      .builder-header p {
        font-size: 0.9rem;
      }

      .builder-form {
        padding: 1rem;
      }

      .form-group label {
        font-size: 1rem;
      }

      .form-group input[type="text"] {
        font-size: 16px; /* Prevents iOS zoom on focus */
        padding: 0.75rem 0.5rem;
      }

      .builder-tabs {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.5rem;
      }

      .builder-tab {
        width: 100%;
        font-size: 0.8rem;
        padding: 0.5rem 0.6rem;
      }

      /* Load card section mobile */
      .form-group[style*="background: #F0F8FF"] {
        padding: 0.75rem !important;
      }

      .form-group div[style*="display: flex"] {
        flex-direction: column !important;
        gap: 0.75rem !important;
      }

      .preset-select-row {
        flex-direction: column;
        align-items: stretch;
      }

      .preset-select-row button {
        width: 100%;
      }

      .template-code-row {
        flex-direction: column;
        align-items: stretch;
      }

      .form-group div[style*="display: flex"] input {
        width: 100% !important;
        font-size: 16px !important;
      }

      .form-group div[style*="display: flex"] button {
        width: 100% !important;
        padding: 0.75rem 1rem !important;
      }

      /* Items list mobile */
      .items-list {
        max-height: 300px;
        padding: 0.5rem;
      }

      .item-row {
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
        position: relative;
      }

      .item-number {
        min-width: 30px;
        font-size: 0.85rem;
      }

      .item-row input {
        flex: 1 1 100%;
        padding: 0.75rem 0.5rem;
        font-size: 16px; /* Prevents iOS zoom on focus */
        min-width: 0;
      }

      .item-row button {
        flex: 1;
        padding: 0.75rem 1rem;
        font-size: 1rem;
      }

      .add-item-btn {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
      }

      .save-btn {
        font-size: 1.1rem;
        padding: 1rem;
      }

      /* Modal mobile */
      .modal-card {
        width: 95%;
        padding: 1.5rem;
      }

      .modal-card h2 {
        font-size: 1.3rem;
      }

      .code-text {
        font-size: 1.5rem;
        letter-spacing: 0.1rem;
      }

      .code-display {
        padding: 1rem;
      }

      .copy-code-btn,
      .home-btn {
        display: block;
        width: 100%;
        margin: 0.5rem 0;
        padding: 0.75rem 1rem;
      }

      .item-count {
        font-size: 0.9rem;
      }

      .back-link {
        font-size: 0.9rem;
      }
    }

    /* Small mobile devices */
    @media (max-width: 480px) {
      .card-builder-container {
        padding: 0.5rem;
      }

      .builder-header {
        margin-bottom: 1rem;
      }

      .builder-header h1 {
        font-size: 1.3rem;
      }

      .builder-form {
        padding: 0.75rem;
      }

      .item-number {
        min-width: 25px;
        font-size: 0.8rem;
      }

      .item-row input {
        font-size: 16px;
      }

      .code-text {
        font-size: 1.2rem;
        letter-spacing: 0.05rem;
      }
    }
  </style>
</head>
<body class="has-global-top-bar" data-asset-version="<%= assetVersion %>" data-sw-enabled="<%= enableServiceWorker %>" data-locale="<%= locale %>">
  <div class="global-top-bar">
    <div class="top-bar-left">
      <a href="/">‚Üê <%= t('actions.backToHome') %></a>
    </div>
    <div class="top-bar-right">
      <%- include('partials/locale-switcher') %>
    </div>
  </div>
  <div class="card-builder-container">

    <div class="builder-header">
      <h1><%= t('cardBuilder.header') %></h1>
      <p><%= t('cardBuilder.subheader') %></p>
      <div style="text-align: center; margin-top: 0.5rem;">
        <a href="/gallery" style="color: #FF69B4; text-decoration: none; font-size: 0.95rem;">
          üé¥ <%= t('cardBuilder.browseGalleryLink') %>
        </a>
      </div>
    </div>

    <div class="builder-form">
      <div class="builder-tabs" role="tablist" aria-label="<%= t('cardBuilder.tabsAriaLabel') %>">
        <button type="button" class="builder-tab active" id="tab-btn-build" data-tab="build" role="tab" aria-controls="tab-build" aria-selected="true">
          <%= t('cardBuilder.tabs.create') %>
        </button>
        <button type="button" class="builder-tab" id="tab-btn-template" data-tab="template" role="tab" aria-controls="tab-template" aria-selected="false">
          <%= t('cardBuilder.tabs.template') %>
        </button>
        <button type="button" class="builder-tab" id="tab-btn-existing" data-tab="existing" role="tab" aria-controls="tab-existing" aria-selected="false">
          <%= t('cardBuilder.tabs.edit') %>
        </button>
      </div>

      <div class="tab-panel active" id="tab-build" role="tabpanel" aria-labelledby="tab-btn-build">
        <div class="form-group">
          <label for="collection-name"><%= t('cardBuilder.collectionNameLabel') %></label>
          <input type="text" id="collection-name" placeholder="<%= t('cardBuilder.collectionNamePlaceholder') %>" required>
          <div class="helper-text"><%= t('cardBuilder.collectionHelper') %></div>
        </div>

        <div class="items-section">
          <label><%= t('cardBuilder.itemsLabel') %></label>
          <div class="item-count" id="item-count"><%= t('cardBuilder.itemsCount', { count: 0 }) %></div>

          <div class="items-list" id="items-list">
            <!-- Items will be added here dynamically -->
          </div>

          <button type="button" class="add-item-btn" onclick="addItemRow()">+ <%= t('actions.addItem') %></button>
        </div>

        <div class="form-group captcha-group">
          <label><%= t('cardBuilder.captchaLabel') %></label>
          <div class="helper-text"><%= t('cardBuilder.captchaHelper') %></div>
          <div class="captcha-wrapper" style="display:flex; gap:0.5rem; align-items:center; flex-wrap:wrap; margin:0.5rem 0;">
            <span id="builder-captcha-question" style="font-weight:600;">
              <%= cardCaptchaQuestion || t('cardBuilder.captchaQuestionFallback') %>
            </span>
            <button type="button" class="secondary-button" onclick="refreshBuilderCaptcha(event)" style="padding:0.35rem 0.75rem;">
              ‚Üª
            </button>
          </div>
          <input type="text" id="captcha-answer" placeholder="<%= t('cardBuilder.captchaPlaceholder') %>" autocomplete="off">
        </div>

        <div class="form-group lock-group" id="lock-group">
          <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
            <input type="checkbox" id="lock-card-checkbox" style="cursor: pointer;" onchange="togglePublicOption()">
            <span><%= t('cardBuilder.lockCardLabel') %></span>
          </label>
          <div class="helper-text"><%= t('cardBuilder.lockCardHelper') %></div>
        </div>

        <div class="form-group public-group" id="public-group" style="display: none;">
          <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
            <input type="checkbox" id="public-card-checkbox" style="cursor: pointer;">
            <span><%= t('cardBuilder.publicCardLabel') %></span>
          </label>
          <div class="helper-text"><%= t('cardBuilder.publicCardHelper') %></div>
        </div>

        <div class="form-group creator-group" id="creator-group" style="display: none;">
          <label for="creator-name"><%= t('cardBuilder.creatorNameLabel') %></label>
          <input type="text" id="creator-name" placeholder="<%= t('cardBuilder.creatorNamePlaceholder') %>" maxlength="50">
          <div class="helper-text"><%= t('cardBuilder.creatorNameHelper') %></div>
        </div>

        <button type="button" class="save-btn" id="save-btn" onclick="saveCollection()" disabled>
          <%= t('cardBuilder.saveButton') %>
        </button>
      </div>

      <div class="tab-panel" id="tab-template" role="tabpanel" aria-labelledby="tab-btn-template" hidden>
        <div class="form-group template-section" style="margin-bottom: 0;">
          <label for="template-preset"><%= t('cardBuilder.templateSectionLabel') %></label>
          <div class="helper-text"><%= t('cardBuilder.templateSectionHelper') %></div>
          <div class="preset-select-row">
            <select id="template-preset" class="form-select">
              <option value=""><%= t('cardBuilder.templatePlaceholder') %></option>
              <option value="default"><%= t('home.bingoDefaultOption') %></option>
              <option value="category"><%= t('home.bingoCategoryOption') %></option>
              <option value="game"><%= t('home.bingoGameOption') %></option>
              <option value="all"><%= t('home.bingoAllOption') %></option>
            </select>
          </div>
          <div id="template-category-wrapper" class="preset-detail" style="display: none;">
            <label class="form-sub-label" for="templateCategory"><%= t('home.bingoCategoryLabel') %></label>
            <select id="templateCategory" class="form-select" disabled>
              <option value=""><%= t('home.loadingCategories') %></option>
            </select>
          </div>
          <div id="template-game-wrapper" class="preset-detail" style="display: none;">
            <label class="form-sub-label" for="templateGame"><%= t('home.bingoGameLabel') %></label>
            <select id="templateGame" class="form-select" disabled>
              <option value=""><%= t('home.loadingGames') %></option>
            </select>
          </div>
          <div id="template-load-row" class="preset-load-row" hidden>
            <button type="button" id="load-preset-btn" class="secondary-button" style="min-width: 160px;"><%= t('cardBuilder.templateLoadButton') %></button>
          </div>
          <div id="template-status" class="helper-text muted"></div>
          <div class="template-divider"><%= t('cardBuilder.templateDivider') %></div>
          <div class="helper-text" style="margin-bottom: 0.5rem;"><%= t('cardBuilder.templateDuplicateHelper') %></div>
          <div class="template-code-row">
            <input type="text" id="template-card-code" placeholder="<%= t('cardBuilder.templateCodePlaceholder') %>" maxlength="6">
            <button type="button" id="load-template-code-btn" class="secondary-button" style="min-width: 180px;"><%= t('cardBuilder.templateCodeButton') %></button>
          </div>
        </div>
      </div>

      <div class="tab-panel" id="tab-existing" role="tabpanel" aria-labelledby="tab-btn-existing" hidden>
        <div class="form-group" style="background: #F0F8FF; padding: 1rem; border-radius: 8px; margin-bottom: 0;">
          <label for="load-card-code"><%= t('cardBuilder.existingSectionLabel') %></label>
          <div class="helper-text"><%= t('cardBuilder.existingSectionHelper') %></div>
          <div style="display: flex; gap: 0.5rem; align-items: center;">
            <input type="text" id="load-card-code" placeholder="<%= t('cardBuilder.existingCodePlaceholder') %>" maxlength="6" style="flex: 1; text-transform: uppercase;">
            <button type="button" onclick="loadCard()" style="background-color: #10B981; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; cursor: pointer; white-space: nowrap;"><%= t('cardBuilder.existingLoadButton') %></button>
          </div>
          <div id="load-card-status" class="helper-text" style="margin-top: 0.5rem;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div class="modal-overlay" id="success-modal">
    <div class="modal-card">
      <h2><%= t('cardBuilder.successTitle') %></h2>
      <p><%= t('cardBuilder.successBody') %></p>

      <div class="code-display">
        <div class="code-text" id="card-code"></div>
      </div>

      <p style="color: #666; font-size: 0.9rem; margin-top: 1rem;">
        <%= t('cardBuilder.successHint') %>
      </p>

      <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; justify-content: center;">
        <button class="copy-code-btn" onclick="copyCode()"><%= t('actions.copyCode') %></button>
        <button class="copy-code-btn" onclick="viewCard()" style="background: #00BFFF;">
          <%= t('cardBuilder.viewCard') %>
        </button>
        <button class="copy-code-btn" onclick="shareCard()" style="background: #10B981;">
          üîó <%= t('cardBuilder.shareCard') %>
        </button>
      </div>

      <button class="home-btn" onclick="window.location.href='/'"><%= t('cardBuilder.successHomeButton') %></button>
    </div>
  </div>

  <%- include('partials/i18n-script', { namespaces: ['cardBuilder', 'alerts', 'home'] }) %>
<script>
    const translateText = (key, vars) => (typeof window.t === 'function' ? window.t(key, vars) : key);
    const templatePresetSelect = document.getElementById('template-preset');
    const templateCategoryWrapper = document.getElementById('template-category-wrapper');
    const templateCategorySelect = document.getElementById('templateCategory');
    const templateGameWrapper = document.getElementById('template-game-wrapper');
    const templateGameSelect = document.getElementById('templateGame');
    const templateStatusEl = document.getElementById('template-status');
    const templateLoadBtn = document.getElementById('load-preset-btn');
    const templateLoadRow = document.getElementById('template-load-row');
    const templateCodeInput = document.getElementById('template-card-code');
    const templateCodeBtn = document.getElementById('load-template-code-btn');
    const builderTabs = document.querySelectorAll('.builder-tab');
    const tabPanels = document.querySelectorAll('.tab-panel');
    const builderCaptchaQuestionEl = document.getElementById('builder-captcha-question');
    const builderCaptchaInput = document.getElementById('captcha-answer');
    const loadCardCodeInput = document.getElementById('load-card-code');
    const csrfTokenMeta = document.querySelector('meta[name="csrf-token"]');
    const csrfToken = csrfTokenMeta ? csrfTokenMeta.getAttribute('content') : '';
    let bingoMetaCache = null;

    let itemIndex = 0;
    let editingCardCode = null; // Track if we're editing an existing card
    function normalizeTaskValue(item) {
      if (typeof item === 'string') return item;
      if (item && typeof item === 'object') {
        return item.text || item.rawText || item.id || '';
      }
      return '';
    }

    if (templatePresetSelect) {
      templatePresetSelect.addEventListener('change', handleTemplatePresetChange);
    }
    if (templateCategorySelect) {
      templateCategorySelect.addEventListener('change', updateTemplateLoadButtonState);
    }
    if (templateGameSelect) {
      templateGameSelect.addEventListener('change', updateTemplateLoadButtonState);
    }
    if (templateLoadBtn) {
      templateLoadBtn.addEventListener('click', loadSelectedPresetTemplate);
    }
    if (templateCodeBtn) {
      templateCodeBtn.addEventListener('click', loadTemplateFromCode);
    }
    if (templateCodeInput) {
      templateCodeInput.addEventListener('input', function() {
        this.value = this.value.toUpperCase();
      });
    }
    if (loadCardCodeInput) {
      loadCardCodeInput.addEventListener('input', function() {
        this.value = this.value.toUpperCase();
      });
    }
    updateTemplateLoadButtonState();

    async function refreshBuilderCaptcha(event) {
      if (event && typeof event.preventDefault === 'function') {
        event.preventDefault();
      }
      if (!builderCaptchaQuestionEl) return;
      const trigger = event?.currentTarget;
      try {
        if (trigger) trigger.disabled = true;
        const response = await fetch('/api/captcha/cardBuilder');
        if (!response.ok) throw new Error(translateText('cardBuilder.errors.captchaRefresh'));
        const data = await response.json();
        builderCaptchaQuestionEl.textContent = data.question || translateText('cardBuilder.captchaQuestionFallback');
        if (builderCaptchaInput) builderCaptchaInput.value = '';
      } catch (error) {
        console.error('captcha refresh failed', error);
        builderCaptchaQuestionEl.textContent = translateText('cardBuilder.messages.captchaLoadError');
      } finally {
        if (trigger) trigger.disabled = false;
      }
    }

    function setTemplateStatus(message, isError = false) {
      if (!templateStatusEl) return;
      templateStatusEl.textContent = message || '';
      templateStatusEl.classList.remove('error');
      if (message) {
        templateStatusEl.classList.remove('muted');
      }
      if (isError) {
        templateStatusEl.classList.add('error');
      }
    }

    function handleTemplatePresetChange() {
      if (!templatePresetSelect) return;
      const preset = templatePresetSelect.value;
      const needsCategory = preset === 'category';
      const needsGame = preset === 'game';
      if (templateCategoryWrapper) {
        templateCategoryWrapper.style.display = needsCategory ? 'block' : 'none';
      }
      if (templateGameWrapper) {
        templateGameWrapper.style.display = needsGame ? 'block' : 'none';
      }
      if (templateCategorySelect) {
        templateCategorySelect.disabled = !needsCategory;
        if (!needsCategory) templateCategorySelect.value = '';
      }
      if (templateGameSelect) {
        templateGameSelect.disabled = !needsGame;
        if (!needsGame) templateGameSelect.value = '';
      }
      if ((needsCategory || needsGame) && !bingoMetaCache) {
        loadBingoMeta().catch(() => {});
      }
      updateTemplateLoadButtonState();
    }

    function updateTemplateLoadButtonState() {
      if (!templateLoadRow || !templatePresetSelect) return;
      const preset = templatePresetSelect.value;
      let shouldShow = false;
      if (preset === 'category') {
        shouldShow = !!(templateCategorySelect && templateCategorySelect.value);
      } else if (preset === 'game') {
        shouldShow = !!(templateGameSelect && templateGameSelect.value);
      } else if (preset) {
        shouldShow = true;
      }
      templateLoadRow.hidden = !shouldShow;
    }

    async function fetchJson(url) {
      const response = await fetch(url);
      if (!response.ok) {
        let message = translateText('errors.generic');
        try {
          const errorData = await response.json();
          message = errorData.error || message;
        } catch (_) {
          // ignore
        }
        throw new Error(message);
      }
      return response.json();
    }

    function populateTemplateSelect(selectEl, items, placeholder) {
      if (!selectEl) return;
      const previous = selectEl.value;
      selectEl.innerHTML = '';
      const placeholderOption = document.createElement('option');
      placeholderOption.value = '';
      placeholderOption.textContent = placeholder;
      placeholderOption.disabled = true;
      placeholderOption.selected = true;
      selectEl.appendChild(placeholderOption);
      (items || []).forEach(item => {
        const opt = document.createElement('option');
        opt.value = item.value;
        opt.textContent = `${item.label} (${item.count})`;
        selectEl.appendChild(opt);
      });
      if (previous && (items || []).some(item => item.value === previous)) {
        selectEl.value = previous;
      }
      selectEl.disabled = !items || items.length === 0;
    }

    async function loadBingoMeta() {
      if (bingoMetaCache) return bingoMetaCache;
      const data = await fetchJson('/api/bingo-tasks/meta');
      bingoMetaCache = data;
          populateTemplateSelect(templateCategorySelect, data.categories || [], translateText('home.bingoCategoryPlaceholder'));
          populateTemplateSelect(templateGameSelect, data.games || [], translateText('home.bingoGamePlaceholder'));
      return data;
    }

    async function loadSelectedPresetTemplate() {
      if (!templatePresetSelect) return;
      const preset = templatePresetSelect.value;
      if (!preset) {
        setTemplateStatus(translateText('cardBuilder.messages.presetRequired'), true);
        return;
      }
      setTemplateStatus(translateText('cardBuilder.messages.loadingDeck'));
      try {
        let data;
        if (preset === 'default') {
          data = await fetchJson('/api/default-card');
        } else if (preset === 'all') {
          data = await fetchJson('/api/bingo-tasks/pool?type=all');
        } else if (preset === 'category') {
          await loadBingoMeta();
          const categoryValue = templateCategorySelect.value;
          if (!categoryValue) {
            setTemplateStatus(translateText('cardBuilder.messages.selectCategory'), true);
            return;
          }
          data = await fetchJson(`/api/bingo-tasks/pool?type=category&value=${encodeURIComponent(categoryValue)}`);
        } else if (preset === 'game') {
          await loadBingoMeta();
          const gameValue = templateGameSelect.value;
          if (!gameValue) {
            setTemplateStatus(translateText('cardBuilder.messages.selectGame'), true);
            return;
          }
          data = await fetchJson(`/api/bingo-tasks/pool?type=game&value=${encodeURIComponent(gameValue)}`);
        } else {
          setTemplateStatus(translateText('cardBuilder.messages.unsupportedPreset'), true);
          return;
        }

        applyTemplateFromData({
          items: data.items,
          label: data.label || data.name,
          itemCount: data.itemCount
        }, {
          suggestedName: `${data.label || data.name || 'Custom Card'} Remix`,
          forceName: true
        });
        setTemplateStatus(translateText('cardBuilder.messages.loadedPreset', {
          name: data.label || data.name,
          count: data.itemCount
        }));
        document.getElementById('items-list').scrollIntoView({ behavior: 'smooth', block: 'start' });
        switchTab('build');
      } catch (error) {
        setTemplateStatus(error.message || translateText('cardBuilder.errors.loadPreset'), true);
      }
    }

    async function loadTemplateFromCode() {
      if (!templateCodeInput) return;
      const code = templateCodeInput.value.trim().toUpperCase();
      if (code.length !== 6) {
        setTemplateStatus(translateText('cardBuilder.messages.duplicateCodeInvalid'), true);
        return;
      }
      setTemplateStatus(translateText('cardBuilder.messages.loadingCard', { code }));
      try {
        const data = await fetchJson(`/api/card-collections/${code}`);
        applyTemplateFromData({
          items: data.items,
          label: data.name,
          itemCount: data.itemCount || (data.items ? data.items.length : 0)
        }, {
          suggestedName: `${data.name} Remix`,
          forceName: true
        });
        setTemplateStatus(translateText('cardBuilder.messages.loadedCard', {
          name: data.name,
          count: data.items.length
        }));
        document.getElementById('items-list').scrollIntoView({ behavior: 'smooth', block: 'start' });
        switchTab('build');
      } catch (error) {
        setTemplateStatus(error.message || translateText('cardBuilder.errors.loadCard'), true);
      }
    }

    function applyTemplateFromData(data, options = {}) {
      if (!data || !Array.isArray(data.items) || !data.items.length) {
        throw new Error(translateText('cardBuilder.messages.presetEmpty'));
      }
      const itemsList = document.getElementById('items-list');
      itemsList.innerHTML = '';
      itemIndex = 0;
      data.items.forEach(item => addItemRowWithValue(normalizeTaskValue(item)));
      editingCardCode = null;
      const saveBtn = document.getElementById('save-btn');
      if (saveBtn) {
        saveBtn.textContent = translateText('cardBuilder.saveButton');
      }
      // Show lock checkbox when creating new card
      document.getElementById('lock-group').style.display = 'block';
      document.getElementById('lock-card-checkbox').checked = false;
      // Hide public and creator groups initially (shown when lock is checked)
      document.getElementById('public-group').style.display = 'none';
      document.getElementById('creator-group').style.display = 'none';
      document.getElementById('public-card-checkbox').checked = false;
      document.getElementById('creator-name').value = '';
      const nameInput = document.getElementById('collection-name');
      if (nameInput && (options.forceName || !nameInput.value.trim())) {
    const baseName = data.label || data.name || translateText('cardBuilder.defaultCardName');
    nameInput.value = options.suggestedName || translateText('cardBuilder.messages.remixName', { name: baseName });
      }
      updateCount();
    }

    // Add initial empty row without scrolling to keep form in view
    addItemRow({ scrollIntoView: false, focusInput: false });

    builderTabs.forEach(tab => {
      tab.addEventListener('click', () => switchTab(tab.dataset.tab));
    });

    function switchTab(tabName) {
      builderTabs.forEach(tab => {
        const isActive = tab.dataset.tab === tabName;
        tab.classList.toggle('active', isActive);
        tab.setAttribute('aria-selected', isActive);
      });
      tabPanels.forEach(panel => {
        const isActive = panel.id === `tab-${tabName}`;
        panel.classList.toggle('active', isActive);
        if (isActive) {
          panel.removeAttribute('hidden');
        } else {
          panel.setAttribute('hidden', 'hidden');
        }
      });
    }

    switchTab('build');

    // Load existing card
    async function loadCard() {
      const code = document.getElementById('load-card-code').value.trim().toUpperCase();
      const statusEl = document.getElementById('load-card-status');

      if (code.length !== 6) {
    statusEl.textContent = translateText('cardBuilder.messages.loadCodeInvalid');
        statusEl.style.color = '#EF4444';
        return;
      }

      try {
        const response = await fetch(`/api/card-collections/${code}`);

        if (!response.ok) {
        statusEl.textContent = `‚úó ${translateText('cardBuilder.messages.cardNotFound')}`;
          statusEl.style.color = '#EF4444';
          return;
        }

        const cardData = await response.json();

        // Check if card is locked
        if (cardData.isLocked) {
          statusEl.innerHTML = `<span style="color: #F59E0B;">üîí ${translateText('cardBuilder.messages.cardLocked')}</span><br><span style="color: #6B7280; font-size: 0.9em;">${translateText('cardBuilder.messages.cardLockedHint')}</span>`;
          return;
        }

        // Populate card name
        document.getElementById('collection-name').value = cardData.name;

        // Clear existing items
        document.getElementById('items-list').innerHTML = '';
        itemIndex = 0;

        // Add all items from the card
        cardData.items.forEach(item => {
          addItemRowWithValue(item);
        });

        // Set editing mode
        editingCardCode = code;

        // Hide lock checkbox when editing existing card
        document.getElementById('lock-group').style.display = 'none';

        // Update button text
        document.getElementById('save-btn').textContent = translateText('cardBuilder.updateButton');

        statusEl.textContent = `‚úì ${translateText('cardBuilder.messages.cardLoaded', { name: cardData.name, count: cardData.itemCount })}`;
        statusEl.style.color = '#10B981';
        switchTab('build');
        document.getElementById('items-list').scrollIntoView({ behavior: 'smooth', block: 'start' });

      } catch (error) {
        console.error('Error loading card:', error);
        statusEl.textContent = `‚úó ${translateText('cardBuilder.messages.cardLoadError')}`;
        statusEl.style.color = '#EF4444';
      }
    }

    function buildItemRow(value = '') {
      const currentIndex = itemIndex;
      const row = document.createElement('div');
      row.className = 'item-row';
      row.id = `item-row-${currentIndex}`;

      const itemNumber = document.createElement('div');
      itemNumber.className = 'item-number';
      itemNumber.textContent = `${getItemNumber()}.`;

      const input = document.createElement('input');
      input.type = 'text';
      input.id = `item-${currentIndex}`;
      input.placeholder = translateText('cardBuilder.messages.itemPlaceholder');
      input.value = value || '';
      input.addEventListener('input', updateCount);

      const removeButton = document.createElement('button');
      removeButton.textContent = translateText('cardBuilder.messages.removeItem');
      removeButton.addEventListener('click', () => removeItemRow(row.id));

      row.appendChild(itemNumber);
      row.appendChild(input);
      row.appendChild(removeButton);

      return { row, input };
    }

    function addItemRowWithValue(value) {
      const itemsList = document.getElementById('items-list');
      const { row } = buildItemRow(normalizeTaskValue(value));
      itemsList.appendChild(row);
      itemIndex++;
      updateCount();
    }

    function addItemRow(options = {}) {
      const {
        scrollIntoView = true,
        focusInput = true
      } = options;
      const itemsList = document.getElementById('items-list');
      const { row, input } = buildItemRow('');
      itemsList.appendChild(row);
      itemIndex++;
      updateCount();

      if (scrollIntoView) {
        row.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
      if (focusInput) {
        setTimeout(() => input.focus(), 300);
      }
    }

    function getItemNumber() {
      // Count visible rows to get the correct number
      const rows = document.querySelectorAll('.item-row');
      return rows.length + 1;
    }

    function removeItemRow(identifier) {
      const rowId = typeof identifier === 'string' ? identifier : `item-row-${identifier}`;
      const row = document.getElementById(rowId);
      if (row) {
        row.remove();
        renumberItems();
        updateCount();
      }
    }

    function renumberItems() {
      const rows = document.querySelectorAll('.item-row');
      rows.forEach((row, idx) => {
        const numberEl = row.querySelector('.item-number');
        if (numberEl) {
          numberEl.textContent = `${idx + 1}.`;
        }
      });
    }

    function updateCount() {
      const items = getItems();
    const count = items.length;
    const countEl = document.getElementById('item-count');
    const saveBtn = document.getElementById('save-btn');

    countEl.textContent = translateText('cardBuilder.itemsCount', { count });

    if (count < 25) {
      countEl.className = 'item-count error';
      countEl.textContent = translateText('cardBuilder.itemsCountNeed', { count });
      saveBtn.disabled = true;
    } else {
      countEl.className = 'item-count success';
      countEl.textContent = translateText('cardBuilder.itemsCountReady', { count });
      saveBtn.disabled = false;
    }
  }

    function getItems() {
      const items = [];
      const inputs = document.querySelectorAll('.item-row input[type="text"]');

      inputs.forEach(input => {
        const value = input.value.trim();
        if (value) {
          items.push(value);
        }
      });

      return items;
    }

    function togglePublicOption() {
      const isLocked = document.getElementById('lock-card-checkbox').checked;
      const publicGroup = document.getElementById('public-group');
      const creatorGroup = document.getElementById('creator-group');

      if (isLocked) {
        publicGroup.style.display = 'block';
        creatorGroup.style.display = 'block';
      } else {
        publicGroup.style.display = 'none';
        creatorGroup.style.display = 'none';
        document.getElementById('public-card-checkbox').checked = false;
      }
    }

    async function saveCollection() {
      const name = document.getElementById('collection-name').value.trim();
      const items = getItems();
      const captchaAnswer = builderCaptchaInput ? builderCaptchaInput.value.trim() : '';
      const isLocked = document.getElementById('lock-card-checkbox').checked;
      const isPublic = document.getElementById('public-card-checkbox').checked;
      const creatorName = document.getElementById('creator-name').value.trim();

      if (!name) {
        alert(translateText('cardBuilder.errors.nameRequired'));
        return;
      }

      if (items.length < 25) {
        alert(translateText('cardBuilder.errors.itemsRequired'));
        return;
      }

      if (!captchaAnswer) {
        alert(translateText('cardBuilder.errors.captchaRequired'));
        return;
      }

      // Disable button during save
      const saveBtn = document.getElementById('save-btn');
      saveBtn.disabled = true;
      saveBtn.textContent = translateText('cardBuilder.messages.saving');

      try {
        let response;

        if (editingCardCode) {
          // Update existing card (don't allow changing lock status on update)
          response = await fetch(`/api/card-collections/${editingCardCode}`, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
              'x-csrf-token': csrfToken
            },
            body: JSON.stringify({ name, items, captchaAnswer })
          });
        } else {
          // Create new card
          response = await fetch('/api/card-collections', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'x-csrf-token': csrfToken
            },
            body: JSON.stringify({ name, items, captchaAnswer, isLocked, isPublic, creatorName })
          });
        }

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || translateText('cardBuilder.errors.saveFailed'));
        }

        const data = await response.json();

        // Show success modal with code
        document.getElementById('card-code').textContent = data.code;
        document.getElementById('success-modal').style.display = 'flex';
        if (builderCaptchaInput) builderCaptchaInput.value = '';
        refreshBuilderCaptcha();

      } catch (error) {
        alert(`${translateText('cardBuilder.errors.saveFailed')}: ${error.message}`);
        saveBtn.disabled = false;
        saveBtn.textContent = editingCardCode ? translateText('cardBuilder.updateButton') : translateText('cardBuilder.saveButton');
      }
    }

    function copyCode() {
      const code = document.getElementById('card-code').textContent;
      navigator.clipboard.writeText(code).then(() => {
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = translateText('cardBuilder.messages.copied');
        setTimeout(() => {
          btn.textContent = originalText;
        }, 2000);
      });
    }

    function viewCard() {
      const code = document.getElementById('card-code').textContent;
      window.location.href = `/card/${code}`;
    }

    function shareCard() {
      const code = document.getElementById('card-code').textContent;
      const shareUrl = `${window.location.origin}/card/${code}`;
      navigator.clipboard.writeText(shareUrl).then(() => {
        alert(translateText('cardBuilder.messages.shareLinkCopied'));
      }).catch(() => {
        // Fallback: show the URL in a prompt
        prompt(translateText('cardBuilder.messages.shareLink'), shareUrl);
      });
    }

    // Preload metadata for template selects
    loadBingoMeta().catch(() => {});
    handleTemplatePresetChange();
  </script>
