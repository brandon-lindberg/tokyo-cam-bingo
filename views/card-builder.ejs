<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Create Custom Card - Tokyo Cam Bingo</title>

  <!-- PWA Meta Tags -->
  <meta name="description" content="Create custom bingo cards for Tokyo Cam Bingo">
  <meta name="theme-color" content="#FF69B4">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="TCB">

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css?v=<%= assetVersion %>">
  <script src="/js/pwa-install.js?v=<%= assetVersion %>" defer></script>
  <style>
    .card-builder-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }

    .builder-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .builder-form {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .builder-tabs {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
    }

    .builder-tab {
      flex: 1 1 160px;
      border: 2px solid #E0E0E0;
      background: #F8FBFF;
      color: #555;
      padding: 0.75rem 1rem;
      border-radius: 999px;
      font-family: 'Poppins', sans-serif;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .builder-tab.active {
      border-color: #00BFFF;
      background: #00BFFF;
      color: white;
      box-shadow: 0 4px 10px rgba(0,191,255,0.25);
    }

    .tab-panel {
      display: none;
    }

    .tab-panel.active {
      display: block;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      font-family: 'Poppins', sans-serif;
      color: #FF69B4;
      margin-bottom: 0.5rem;
      font-size: 1.1rem;
    }

    .form-group input[type="text"] {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 2px solid #E0E0E0;
      border-radius: 8px;
      font-family: 'Roboto', sans-serif;
    }
    .template-section {
      border: 1px solid #E0E0E0;
      border-radius: 8px;
      padding: 1rem;
      background: #FAFEFF;
    }

    .helper-text {
      font-size: 0.9rem;
      color: #666;
      margin-top: 0.5rem;
    }

    .helper-text.muted {
      color: #94A3B8;
    }

    .helper-text.error {
      color: #EF4444;
    }

    .preset-select-row {
      display: flex;
      gap: 0.75rem;
      align-items: center;
      flex-wrap: wrap;
      margin-top: 0.5rem;
    }

    .preset-select-row select {
      flex: 1;
      min-width: 220px;
    }

    .template-code-row {
      display: flex;
      gap: 0.5rem;
      align-items: center;
      flex-wrap: wrap;
    }

    .template-code-row input {
      flex: 1;
      text-transform: uppercase;
    }

    .template-divider {
      text-align: center;
      font-size: 0.8rem;
      letter-spacing: 0.08em;
      color: #999;
      text-transform: uppercase;
      margin: 1rem 0;
    }

    .template-section .helper-text {
      margin-top: 0.5rem;
    }

    .items-section {
      margin-top: 2rem;
    }

    .items-list {
      max-height: 400px;
      overflow-y: auto;
      margin-bottom: 1rem;
      padding: 1rem;
      background: #F0F8FF;
      border-radius: 8px;
    }

    .item-row {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
      align-items: center;
    }

    .item-number {
      min-width: 40px;
      font-weight: 600;
      color: #666;
      text-align: right;
      font-size: 0.95rem;
    }

    .item-row input {
      flex: 1;
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-family: 'Roboto', sans-serif;
    }

    .item-row button {
      background-color: #EF4444;
      color: white;
      border: none;
      padding: 0.6rem 1rem;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .item-row button:hover {
      background-color: #DC2626;
    }

    .add-item-btn {
      background-color: #10B981;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .add-item-btn:hover {
      background-color: #0EA371;
    }

    .item-count {
      text-align: center;
      color: #666;
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }

    .item-count.error {
      color: #EF4444;
    }

    .item-count.success {
      color: #10B981;
    }

    .save-btn {
      width: 100%;
      padding: 1rem 2rem;
      font-size: 1.2rem;
      font-family: 'Poppins', sans-serif;
      background-color: #00BFFF;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-top: 1rem;
    }

    .save-btn:hover:not(:disabled) {
      background-color: #009ACD;
    }

    .save-btn:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }

    .back-link {
      display: inline-block;
      margin-bottom: 1rem;
      color: #00BFFF;
      text-decoration: none;
      font-size: 1rem;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    /* Success Modal */
    .modal-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.6);
      z-index: 1003;
      align-items: center;
      justify-content: center;
    }

    .modal-card {
      background: #ffffff;
      width: 90%;
      max-width: 500px;
      border-radius: 16px;
      padding: 2rem;
      text-align: center;
    }

    .modal-card h2 {
      color: #10B981;
      margin-bottom: 1rem;
    }

    .code-display {
      background: #F0F8FF;
      padding: 1.5rem;
      border-radius: 8px;
      margin: 1.5rem 0;
      border: 2px solid #00BFFF;
    }

    .code-text {
      font-family: 'Courier New', monospace;
      font-size: 2rem;
      color: #00BFFF;
      font-weight: bold;
      letter-spacing: 0.2rem;
    }

    .copy-code-btn {
      background-color: #10B981;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Roboto', sans-serif;
      margin-top: 1rem;
    }

    .copy-code-btn:hover {
      background-color: #0EA371;
    }

    .home-btn {
      background-color: #00BFFF;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-family: 'Roboto', sans-serif;
      margin-top: 1rem;
      margin-left: 0.5rem;
    }

    .home-btn:hover {
      background-color: #009ACD;
    }

    /* Mobile Responsive Styles */
    @media (max-width: 768px) {
      .card-builder-container {
        padding: 1rem;
      }

      .builder-header h1 {
        font-size: 1.5rem;
      }

      .builder-header p {
        font-size: 0.9rem;
      }

      .builder-form {
        padding: 1rem;
      }

      .form-group label {
        font-size: 1rem;
      }

      .form-group input[type="text"] {
        font-size: 16px; /* Prevents iOS zoom on focus */
        padding: 0.75rem 0.5rem;
      }

      .builder-tabs {
        flex-direction: column;
      }

      .builder-tab {
        width: 100%;
      }

      /* Load card section mobile */
      .form-group[style*="background: #F0F8FF"] {
        padding: 0.75rem !important;
      }

      .form-group div[style*="display: flex"] {
        flex-direction: column !important;
        gap: 0.75rem !important;
      }

      .preset-select-row {
        flex-direction: column;
        align-items: stretch;
      }

      .preset-select-row button {
        width: 100%;
      }

      .template-code-row {
        flex-direction: column;
        align-items: stretch;
      }

      .form-group div[style*="display: flex"] input {
        width: 100% !important;
        font-size: 16px !important;
      }

      .form-group div[style*="display: flex"] button {
        width: 100% !important;
        padding: 0.75rem 1rem !important;
      }

      /* Items list mobile */
      .items-list {
        max-height: 300px;
        padding: 0.5rem;
      }

      .item-row {
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
        position: relative;
      }

      .item-number {
        min-width: 30px;
        font-size: 0.85rem;
      }

      .item-row input {
        flex: 1 1 100%;
        padding: 0.75rem 0.5rem;
        font-size: 16px; /* Prevents iOS zoom on focus */
        min-width: 0;
      }

      .item-row button {
        flex: 1;
        padding: 0.75rem 1rem;
        font-size: 1rem;
      }

      .add-item-btn {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
      }

      .save-btn {
        font-size: 1.1rem;
        padding: 1rem;
      }

      /* Modal mobile */
      .modal-card {
        width: 95%;
        padding: 1.5rem;
      }

      .modal-card h2 {
        font-size: 1.3rem;
      }

      .code-text {
        font-size: 1.5rem;
        letter-spacing: 0.1rem;
      }

      .code-display {
        padding: 1rem;
      }

      .copy-code-btn,
      .home-btn {
        display: block;
        width: 100%;
        margin: 0.5rem 0;
        padding: 0.75rem 1rem;
      }

      .item-count {
        font-size: 0.9rem;
      }

      .back-link {
        font-size: 0.9rem;
      }
    }

    /* Small mobile devices */
    @media (max-width: 480px) {
      .card-builder-container {
        padding: 0.5rem;
      }

      .builder-header {
        margin-bottom: 1rem;
      }

      .builder-header h1 {
        font-size: 1.3rem;
      }

      .builder-form {
        padding: 0.75rem;
      }

      .item-number {
        min-width: 25px;
        font-size: 0.8rem;
      }

      .item-row input {
        font-size: 16px;
      }

      .code-text {
        font-size: 1.2rem;
        letter-spacing: 0.05rem;
      }
    }
  </style>
</head>
<body data-asset-version="<%= assetVersion %>" data-sw-enabled="<%= enableServiceWorker %>">
  <div class="card-builder-container">
    <a href="/" class="back-link">← Back to Home</a>

    <div class="builder-header">
      <h1>Create Custom Bingo Card</h1>
      <p>Add at least 25 items to create your custom card</p>
    </div>

    <div class="builder-form">
      <div class="builder-tabs" role="tablist" aria-label="Card builder modes">
        <button type="button" class="builder-tab active" id="tab-btn-build" data-tab="build" role="tab" aria-controls="tab-build" aria-selected="true">
          Create New Card
        </button>
        <button type="button" class="builder-tab" id="tab-btn-template" data-tab="template" role="tab" aria-controls="tab-template" aria-selected="false">
          Start From Deck
        </button>
        <button type="button" class="builder-tab" id="tab-btn-existing" data-tab="existing" role="tab" aria-controls="tab-existing" aria-selected="false">
          Edit Saved Card
        </button>
      </div>

      <div class="tab-panel active" id="tab-build" role="tabpanel" aria-labelledby="tab-btn-build">
        <div class="form-group">
          <label for="collection-name">Card Name</label>
          <input type="text" id="collection-name" placeholder="e.g., Tokyo Night Edition" required>
          <div class="helper-text">Need a starting point? Load a deck in the other tabs, then come back to customize.</div>
        </div>

        <div class="items-section">
          <label>Items (minimum 25)</label>
          <div class="item-count" id="item-count">0 items added</div>

          <div class="items-list" id="items-list">
            <!-- Items will be added here dynamically -->
          </div>

          <button type="button" class="add-item-btn" onclick="addItemRow()">+ Add Item</button>
        </div>

        <button type="button" class="save-btn" id="save-btn" onclick="saveCollection()" disabled>
          Save Custom Card
        </button>
      </div>

      <div class="tab-panel" id="tab-template" role="tabpanel" aria-labelledby="tab-btn-template" hidden>
        <div class="form-group template-section" style="margin-bottom: 0;">
          <label for="template-preset">Optional: Prefill From an Existing Deck</label>
          <div class="helper-text">Load any built-in deck or one of your codes to jump-start editing. We’ll bring you back to the builder once it loads.</div>
          <div class="preset-select-row">
            <select id="template-preset" class="form-select">
              <option value="">-- Choose a preset --</option>
              <option value="default">Tokyo Cam Bingo (default)</option>
              <option value="category">Bingo Tasks · by Category</option>
              <option value="game">Bingo Tasks · by Game</option>
              <option value="all">Mix All Bingo Tasks</option>
            </select>
            <button type="button" id="load-preset-btn" class="secondary-button" style="min-width: 160px;">Load Deck</button>
          </div>
          <div id="template-category-wrapper" class="preset-detail" style="display: none;">
            <label class="form-sub-label" for="templateCategory">Choose a category</label>
            <select id="templateCategory" class="form-select" disabled>
              <option value="">Loading categories…</option>
            </select>
          </div>
          <div id="template-game-wrapper" class="preset-detail" style="display: none;">
            <label class="form-sub-label" for="templateGame">Choose a game</label>
            <select id="templateGame" class="form-select" disabled>
              <option value="">Loading games…</option>
            </select>
          </div>
          <div id="template-status" class="helper-text muted"></div>
          <div class="template-divider">or</div>
          <div class="helper-text" style="margin-bottom: 0.5rem;">Duplicate one of your saved cards (new code will be generated)</div>
          <div class="template-code-row">
            <input type="text" id="template-card-code" placeholder="Enter card code to duplicate" maxlength="6">
            <button type="button" id="load-template-code-btn" class="secondary-button" style="min-width: 180px;">Load As Template</button>
          </div>
        </div>
      </div>

      <div class="tab-panel" id="tab-existing" role="tabpanel" aria-labelledby="tab-btn-existing" hidden>
        <div class="form-group" style="background: #F0F8FF; padding: 1rem; border-radius: 8px; margin-bottom: 0;">
          <label for="load-card-code">Edit a Saved Card</label>
          <div class="helper-text">Enter the six-letter code for a card you created earlier. We’ll load it so you can update and resave.</div>
          <div style="display: flex; gap: 0.5rem; align-items: center;">
            <input type="text" id="load-card-code" placeholder="Enter card code to edit" maxlength="6" style="flex: 1; text-transform: uppercase;">
            <button type="button" onclick="loadCard()" style="background-color: #10B981; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; cursor: pointer; white-space: nowrap;">Load Card</button>
          </div>
          <div id="load-card-status" class="helper-text" style="margin-top: 0.5rem;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div class="modal-overlay" id="success-modal">
    <div class="modal-card">
      <h2>✓ Custom Card Created!</h2>
      <p>Save this code to use your custom card when creating a game:</p>

      <div class="code-display">
        <div class="code-text" id="card-code"></div>
      </div>

      <p style="color: #666; font-size: 0.9rem; margin-top: 1rem;">
        Write this code down! You'll need it to load this custom card when creating a game.
      </p>

      <button class="copy-code-btn" onclick="copyCode()">Copy Code</button>
      <button class="home-btn" onclick="window.location.href='/'">Go to Home</button>
    </div>
  </div>

  <script>
    const templatePresetSelect = document.getElementById('template-preset');
    const templateCategoryWrapper = document.getElementById('template-category-wrapper');
    const templateCategorySelect = document.getElementById('templateCategory');
    const templateGameWrapper = document.getElementById('template-game-wrapper');
    const templateGameSelect = document.getElementById('templateGame');
    const templateStatusEl = document.getElementById('template-status');
    const templateLoadBtn = document.getElementById('load-preset-btn');
    const templateCodeInput = document.getElementById('template-card-code');
    const templateCodeBtn = document.getElementById('load-template-code-btn');
    const builderTabs = document.querySelectorAll('.builder-tab');
    const tabPanels = document.querySelectorAll('.tab-panel');
    let bingoMetaCache = null;

    let itemIndex = 0;
    let editingCardCode = null; // Track if we're editing an existing card

    if (templatePresetSelect) {
      templatePresetSelect.addEventListener('change', handleTemplatePresetChange);
    }
    if (templateLoadBtn) {
      templateLoadBtn.addEventListener('click', loadSelectedPresetTemplate);
    }
    if (templateCodeBtn) {
      templateCodeBtn.addEventListener('click', loadTemplateFromCode);
    }

    function setTemplateStatus(message, isError = false) {
      if (!templateStatusEl) return;
      templateStatusEl.textContent = message || '';
      templateStatusEl.classList.remove('error');
      if (message) {
        templateStatusEl.classList.remove('muted');
      }
      if (isError) {
        templateStatusEl.classList.add('error');
      }
    }

    function handleTemplatePresetChange() {
      if (!templatePresetSelect) return;
      const preset = templatePresetSelect.value;
      const needsCategory = preset === 'category';
      const needsGame = preset === 'game';
      if (templateCategoryWrapper) {
        templateCategoryWrapper.style.display = needsCategory ? 'block' : 'none';
      }
      if (templateGameWrapper) {
        templateGameWrapper.style.display = needsGame ? 'block' : 'none';
      }
      if (templateCategorySelect) {
        templateCategorySelect.disabled = !needsCategory;
        if (!needsCategory) templateCategorySelect.value = '';
      }
      if (templateGameSelect) {
        templateGameSelect.disabled = !needsGame;
        if (!needsGame) templateGameSelect.value = '';
      }
      if ((needsCategory || needsGame) && !bingoMetaCache) {
        loadBingoMeta().catch(() => {});
      }
    }

    async function fetchJson(url) {
      const response = await fetch(url);
      if (!response.ok) {
        let message = 'Request failed';
        try {
          const errorData = await response.json();
          message = errorData.error || message;
        } catch (_) {
          // ignore
        }
        throw new Error(message);
      }
      return response.json();
    }

    function populateTemplateSelect(selectEl, items, placeholder) {
      if (!selectEl) return;
      const previous = selectEl.value;
      selectEl.innerHTML = '';
      const placeholderOption = document.createElement('option');
      placeholderOption.value = '';
      placeholderOption.textContent = placeholder;
      placeholderOption.disabled = true;
      placeholderOption.selected = true;
      selectEl.appendChild(placeholderOption);
      (items || []).forEach(item => {
        const opt = document.createElement('option');
        opt.value = item.value;
        opt.textContent = `${item.label} (${item.count})`;
        selectEl.appendChild(opt);
      });
      if (previous && (items || []).some(item => item.value === previous)) {
        selectEl.value = previous;
      }
      selectEl.disabled = !items || items.length === 0;
    }

    async function loadBingoMeta() {
      if (bingoMetaCache) return bingoMetaCache;
      const data = await fetchJson('/api/bingo-tasks/meta');
      bingoMetaCache = data;
      populateTemplateSelect(templateCategorySelect, data.categories || [], 'Select a category');
      populateTemplateSelect(templateGameSelect, data.games || [], 'Select a game');
      return data;
    }

    async function loadSelectedPresetTemplate() {
      if (!templatePresetSelect) return;
      const preset = templatePresetSelect.value;
      if (!preset) {
        setTemplateStatus('Please choose a preset to load.', true);
        return;
      }
      setTemplateStatus('Loading deck...');
      try {
        let data;
        if (preset === 'default') {
          data = await fetchJson('/api/default-card');
        } else if (preset === 'all') {
          data = await fetchJson('/api/bingo-tasks/pool?type=all');
        } else if (preset === 'category') {
          await loadBingoMeta();
          const categoryValue = templateCategorySelect.value;
          if (!categoryValue) {
            setTemplateStatus('Please select a category to load.', true);
            return;
          }
          data = await fetchJson(`/api/bingo-tasks/pool?type=category&value=${encodeURIComponent(categoryValue)}`);
        } else if (preset === 'game') {
          await loadBingoMeta();
          const gameValue = templateGameSelect.value;
          if (!gameValue) {
            setTemplateStatus('Please select a game to load.', true);
            return;
          }
          data = await fetchJson(`/api/bingo-tasks/pool?type=game&value=${encodeURIComponent(gameValue)}`);
        } else {
          setTemplateStatus('Unsupported preset type.', true);
          return;
        }

        applyTemplateFromData({
          items: data.items,
          label: data.label || data.name,
          itemCount: data.itemCount
        }, {
          suggestedName: `${data.label || data.name || 'Custom Card'} Remix`,
          forceName: true
        });
        setTemplateStatus(`Loaded ${data.label || data.name} (${data.itemCount} items). Save to create a new code.`);
        document.getElementById('items-list').scrollIntoView({ behavior: 'smooth', block: 'start' });
        switchTab('build');
      } catch (error) {
        setTemplateStatus(error.message || 'Failed to load deck.', true);
      }
    }

    async function loadTemplateFromCode() {
      if (!templateCodeInput) return;
      const code = templateCodeInput.value.trim().toUpperCase();
      if (code.length !== 6) {
        setTemplateStatus('Enter a valid 6-letter card code to duplicate.', true);
        return;
      }
      setTemplateStatus(`Loading card ${code}...`);
      try {
        const data = await fetchJson(`/api/card-collections/${code}`);
        applyTemplateFromData({
          items: data.items,
          label: data.name,
          itemCount: data.itemCount || (data.items ? data.items.length : 0)
        }, {
          suggestedName: `${data.name} Remix`,
          forceName: true
        });
        setTemplateStatus(`Loaded ${data.name} (${data.items.length} items). Saving will create a new code.`);
        document.getElementById('items-list').scrollIntoView({ behavior: 'smooth', block: 'start' });
        switchTab('build');
      } catch (error) {
        setTemplateStatus(error.message || 'Failed to load card.', true);
      }
    }

    function applyTemplateFromData(data, options = {}) {
      if (!data || !Array.isArray(data.items) || !data.items.length) {
        throw new Error('Preset did not return any items.');
      }
      const itemsList = document.getElementById('items-list');
      itemsList.innerHTML = '';
      itemIndex = 0;
      data.items.forEach(item => addItemRowWithValue(item));
      editingCardCode = null;
      const saveBtn = document.getElementById('save-btn');
      if (saveBtn) {
        saveBtn.textContent = 'Save Custom Card';
      }
      const nameInput = document.getElementById('collection-name');
      if (nameInput && (options.forceName || !nameInput.value.trim())) {
        nameInput.value = options.suggestedName || `${data.label || data.name || 'Custom Card'} Remix`;
      }
      updateCount();
    }

    // Add initial empty row without scrolling to keep form in view
    addItemRow({ scrollIntoView: false, focusInput: false });

    builderTabs.forEach(tab => {
      tab.addEventListener('click', () => switchTab(tab.dataset.tab));
    });

    function switchTab(tabName) {
      builderTabs.forEach(tab => {
        const isActive = tab.dataset.tab === tabName;
        tab.classList.toggle('active', isActive);
        tab.setAttribute('aria-selected', isActive);
      });
      tabPanels.forEach(panel => {
        const isActive = panel.id === `tab-${tabName}`;
        panel.classList.toggle('active', isActive);
        if (isActive) {
          panel.removeAttribute('hidden');
        } else {
          panel.setAttribute('hidden', 'hidden');
        }
      });
    }

    switchTab('build');

    // Load existing card
    async function loadCard() {
      const code = document.getElementById('load-card-code').value.trim().toUpperCase();
      const statusEl = document.getElementById('load-card-status');

      if (code.length !== 6) {
        statusEl.textContent = 'Please enter a valid 6-character code';
        statusEl.style.color = '#EF4444';
        return;
      }

      try {
        const response = await fetch(`/api/card-collections/${code}`);

        if (!response.ok) {
          statusEl.textContent = '✗ Card not found';
          statusEl.style.color = '#EF4444';
          return;
        }

        const cardData = await response.json();

        // Populate card name
        document.getElementById('collection-name').value = cardData.name;

        // Clear existing items
        document.getElementById('items-list').innerHTML = '';
        itemIndex = 0;

        // Add all items from the card
        cardData.items.forEach(item => {
          addItemRowWithValue(item);
        });

        // Set editing mode
        editingCardCode = code;

        // Update button text
        document.getElementById('save-btn').textContent = 'Update Custom Card';

        statusEl.textContent = `✓ Loaded "${cardData.name}" (${cardData.itemCount} items)`;
        statusEl.style.color = '#10B981';
        switchTab('build');
        document.getElementById('items-list').scrollIntoView({ behavior: 'smooth', block: 'start' });

      } catch (error) {
        console.error('Error loading card:', error);
        statusEl.textContent = '✗ Error loading card';
        statusEl.style.color = '#EF4444';
      }
    }

    function buildItemRow(value = '') {
      const currentIndex = itemIndex;
      const row = document.createElement('div');
      row.className = 'item-row';
      row.id = `item-row-${currentIndex}`;

      const itemNumber = document.createElement('div');
      itemNumber.className = 'item-number';
      itemNumber.textContent = `${getItemNumber()}.`;

      const input = document.createElement('input');
      input.type = 'text';
      input.id = `item-${currentIndex}`;
      input.placeholder = 'Enter item name';
      input.value = value || '';
      input.addEventListener('input', updateCount);

      const removeButton = document.createElement('button');
      removeButton.textContent = 'Remove';
      removeButton.addEventListener('click', () => removeItemRow(row.id));

      row.appendChild(itemNumber);
      row.appendChild(input);
      row.appendChild(removeButton);

      return { row, input };
    }

    function addItemRowWithValue(value) {
      const itemsList = document.getElementById('items-list');
      const { row } = buildItemRow(value);
      itemsList.appendChild(row);
      itemIndex++;
      updateCount();
    }

    function addItemRow(options = {}) {
      const {
        scrollIntoView = true,
        focusInput = true
      } = options;
      const itemsList = document.getElementById('items-list');
      const { row, input } = buildItemRow('');
      itemsList.appendChild(row);
      itemIndex++;
      updateCount();

      if (scrollIntoView) {
        row.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
      if (focusInput) {
        setTimeout(() => input.focus(), 300);
      }
    }

    function getItemNumber() {
      // Count visible rows to get the correct number
      const rows = document.querySelectorAll('.item-row');
      return rows.length + 1;
    }

    function removeItemRow(identifier) {
      const rowId = typeof identifier === 'string' ? identifier : `item-row-${identifier}`;
      const row = document.getElementById(rowId);
      if (row) {
        row.remove();
        renumberItems();
        updateCount();
      }
    }

    function renumberItems() {
      const rows = document.querySelectorAll('.item-row');
      rows.forEach((row, idx) => {
        const numberEl = row.querySelector('.item-number');
        if (numberEl) {
          numberEl.textContent = `${idx + 1}.`;
        }
      });
    }

    function updateCount() {
      const items = getItems();
      const count = items.length;
      const countEl = document.getElementById('item-count');
      const saveBtn = document.getElementById('save-btn');

      countEl.textContent = `${count} items added`;

      if (count < 25) {
        countEl.className = 'item-count error';
        countEl.textContent = `${count} items added (need at least 25)`;
        saveBtn.disabled = true;
      } else {
        countEl.className = 'item-count success';
        countEl.textContent = `${count} items added ✓`;
        saveBtn.disabled = false;
      }
    }

    function getItems() {
      const items = [];
      const inputs = document.querySelectorAll('.item-row input[type="text"]');

      inputs.forEach(input => {
        const value = input.value.trim();
        if (value) {
          items.push(value);
        }
      });

      return items;
    }

    async function saveCollection() {
      const name = document.getElementById('collection-name').value.trim();
      const items = getItems();

      if (!name) {
        alert('Please enter a card name');
        return;
      }

      if (items.length < 25) {
        alert('Please add at least 25 items');
        return;
      }

      // Disable button during save
      const saveBtn = document.getElementById('save-btn');
      saveBtn.disabled = true;
      saveBtn.textContent = 'Saving...';

      try {
        let response;

        if (editingCardCode) {
          // Update existing card
          response = await fetch(`/api/card-collections/${editingCardCode}`, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ name, items })
          });
        } else {
          // Create new card
          response = await fetch('/api/card-collections', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ name, items })
          });
        }

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Failed to save card');
        }

        const data = await response.json();

        // Show success modal with code
        document.getElementById('card-code').textContent = data.code;
        document.getElementById('success-modal').style.display = 'flex';

      } catch (error) {
        alert('Error saving card: ' + error.message);
        saveBtn.disabled = false;
        saveBtn.textContent = editingCardCode ? 'Update Custom Card' : 'Save Custom Card';
      }
    }

    function copyCode() {
      const code = document.getElementById('card-code').textContent;
      navigator.clipboard.writeText(code).then(() => {
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = 'Copied!';
        setTimeout(() => {
          btn.textContent = originalText;
        }, 2000);
      });
    }

    // Preload metadata for template selects
    loadBingoMeta().catch(() => {});
    handleTemplatePresetChange();
  </script>
