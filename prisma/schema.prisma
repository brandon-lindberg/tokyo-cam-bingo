// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                  String    @id @default(uuid())
  code                String    @unique
  rules               Json      // e.g., {"winConditions": ["row", "2rows", "diagonals"]}
  status              String    @default("active")
  winner              String?
  mode                String    @default("REGULAR") // REGULAR or VS
  sharedCard          Json?     // For VS mode: shared 5x5 card
  customItems         Json?     // Custom item pool (array of strings) - copied from ItemCollection
  flagsEnabled        Boolean   @default(true)
  rerollsEnabled      Boolean   @default(true)
  timerEnabled        Boolean   @default(false)
  timerDuration       Int?      // Duration in seconds
  timerStatus         String    @default("not_started") // not_started, running, paused, expired
  timerStartedAt      DateTime?
  timerPausedAt       DateTime?
  timerAccumulatedPause Int?    // Total paused time in seconds
  pauseTimerOnReroll  Boolean   @default(false)
  createdAt           DateTime  @default(now())
  players             Player[]
  messages            ChatMessage[]
}

model Player {
  id              String   @id @default(uuid())
  name            String
  isHost          Boolean  @default(false)
  gameId          String
  card            Json     // 5x5 array: [[{item: "str", stamped: false}, ...], ...]
  color           String?  // For VS mode: RED, BLUE, GREEN, YELLOW, PURPLE, ORANGE, PINK, CYAN
  stampedSquares  Json?    // For VS mode: array of {row, col, color}
  game            Game     @relation(fields: [gameId], references: [id])
  messages        ChatMessage[]
}

model ChatMessage {
  id        String   @id @default(uuid())
  gameId    String
  playerId  String
  content   String
  createdAt DateTime @default(now())
  game      Game     @relation(fields: [gameId], references: [id])
  player    Player   @relation(fields: [playerId], references: [id])
}

model ItemCollection {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String
  items       Json     // Array of item strings (min 25)
  isLocked    Boolean  @default(false) // Prevents editing, allows duplication only
  isPublic    Boolean  @default(false) // Show in public gallery (only if locked)
  creatorName String?  // Optional creator attribution
  usageCount  Int      @default(0) // Track how many times card is used
  tags        Json?    // Array of tags for discovery/filtering
  createdAt   DateTime @default(now())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model CardReport {
  id        String   @id @default(uuid())
  cardCode  String
  reason    String
  status    String   @default("pending") // pending, reviewed, dismissed
  createdAt DateTime @default(now())
  reviewedAt DateTime?
}
