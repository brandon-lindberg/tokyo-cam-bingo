    function selectModalRandomColumn() {
      const state = modalRerollState;
      clearModalSelection();
      const c = Math.floor(Math.random() * 5);
      state.arg = `${c + 1}`;
      state.selectedCells = Array.from({ length: 5 }, (_, r) => [r, c]);
      highlightModalSelection(state.selectedCells);
